@using System.Linq
@inherits System.Web.WebPages.WebPage

<div class="profileinfo">
    <div class="editprofile">
        <h4>Profile</h4>
        @if (Model.Profile.IsAllowEdit)
        {
            <a class="editbtn" href="#" onclick="parent.OpenPopUp(null, 800, 'right', null, '@Model.Profile.UserExtensionURL')">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="15" height="15"><path d="M290.74 93.24l128.02 128.02-277.99 277.99-114.14 12.6C11.35 513.54-1.56 500.62.14 485.34l12.7-114.22 277.9-277.88zm207.2-19.06l-60.11-60.11c-18.75-18.75-49.16-18.75-67.91 0l-56.55 56.55 128.02 128.02 56.55-56.55c18.75-18.76 18.75-49.16 0-67.91z" /></svg>
            </a>
        }
    </div>
    <div class="userimage">
        <img src="@Model.Profile.PhotoURL" />
    </div>
    <div class="usernamebox">
        <text>@Model.Profile.UserInfo.DisplayName</text>
    </div>
    @foreach (var c in Model.Profile.Fields)
    {
        if (c.Value.Count > 0)
        {
            <div class="userdescription">
                <strong>@c.Key</strong>
            </div>

            foreach (var p in c.Value)
            {
                if (!string.IsNullOrEmpty(p.PropertyValue))
                {
                    <div class="userproperty"><span>@p.PropertyNameString </span>@Html.Raw(p.PropertyValue)</div>
                }
            }
        }
    }
</div>